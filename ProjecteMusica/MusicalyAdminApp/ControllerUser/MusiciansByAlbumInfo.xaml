<UserControl x:Class="MusicalyAdminApp.ControllerUser.MusiciansByAlbumInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicalyAdminApp.ControllerUser"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Títol del album" />
            <ComboBox x:Name="ComboBoxAlbums" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
            <Label Content="Any del album" />
            <TextBox x:Name="YearAlbumInf" Height="35" IsReadOnly="True" />
            <Label Content="Gènere" Margin="0,10,0,0" />
            <TextBox x:Name="genreAlbumInf" Height="35" />
        </StackPanel>
    </Grid>
</UserControl>
